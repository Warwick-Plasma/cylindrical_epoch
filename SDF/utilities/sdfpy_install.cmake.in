set(INSTALL_DIR $ENV{DESTDIR}@CMAKE_INSTALL_PREFIX@)
execute_process(
    COMMAND
        @PYTHON_EXECUTABLE@ setup.py install
            --prefix=${INSTALL_DIR}
            --install-lib=${INSTALL_DIR}/lib/python
    WORKING_DIRECTORY @PROJECT_BINARY_DIR@
    RESULT_VARIABLE RET)
if(RET)
   message(FATAL_ERROR "Could not install sdfpy")
endif()
